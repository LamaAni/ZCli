{
  "zcli_class_argument": {
    "prefix": "@zcli-class-arg",
    "body": [
      "/** ${3:description} */",
      "this.${1:name} = '${2:value}'",
      "/** @type {CliArgument} */",
      "this.__$${1:name} = {",
      "  type: 'named',",
      "  environmentVariable: 'ZCLI_ARG_${1/(.*)/${1:/upcase}/}',",
      "  default: this.${1:name},",
      "  description: '${3:description}',",
      "}"
    ]
  },
  "zcli_simple_command_line": {
    "prefix": "@zcli-simple-command-line",
    "body": [
      "const {Cli} = require('ZCli')",
      "const cli = new Cli({name: '${1:name}'})",
      "cli.default(() => {",
      "  // The default action",
      "  cli.logger.error('No command sepcified')",
      "  throw new Error('no command specified')",
      "})",
      "",
      "if (require.main == module)",
      "  cli.parse().catch((err) => {",
      "	console.error(err)",
      "	process.exit(err.code || 1)",
      "  })		"
    ]
  },
  "zcli_oo_command_line_parser": {
    "prefix": "@zcli-oo-command-line-parser",
    "body": [
      "const {Cli} = require('../src/index')",
      "",
      "const cli = new Cli({name: '${1:name}'})",
      "class CliApp {",
      "  constructor() {",
      "    /** The argument that is passed to the object before run. */",
      "    this.arg = 'default value'",
      "    /** @type {CliArgument} */",
      "    this.__$arg = {",
      "    type: 'named',",
      "    environmentVariable: 'ZCLI_ARG_ARG',",
      "    default: this.arg,",
      "    description: 'The argument that is passed to the object before run.',",
      "    }",
      "  }",
      "",
      "  run() {",
      "    cli.logger.info('Arg = ' + this.arg)",
      "  }",
      "}",
      "",
      "const app = new CliApp()",
      "cli.default(() => app.run(), app)",
      "",
      "if (require.main == module)",
      "  cli.parse().catch((err) => {",
      "    console.error(err)",
      "    process.exit(err.code || 1)",
      "  })"
    ]
  }
}
